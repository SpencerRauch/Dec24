<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/bootstrap.css">
</head>
<body>
    <div class="container">

    <h1>Razor!</h1>
    @{
        List<string> Names = ["Bob","Alice","Alex"];
        <p>@Names[0]</p>
    }
    <p>More html</p>
    @foreach (string name in Names)
    {   
        if (name == "Alice")
        {
            <p>Alice is next:</p>
            <img src="~/img/cake.jpg" alt="a cake for alice">
        }
        <p>@(name + " LastName")</p>
    }
    </div>
</body>
